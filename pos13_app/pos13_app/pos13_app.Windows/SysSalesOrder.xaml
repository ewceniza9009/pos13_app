        <Button x:Name="CmdPreviousTable" Content="&lt;" HorizontalAlignment="Left" Margin="7,96,0,0" Grid.Row="1" VerticalAlignment="Top" Height="446" Width="50" Click="CmdPreviousTable_Click" BorderThickness="1"/>
