        <Button x:Name="CmdDelivery" Tag="36" Content="Delivery" HorizontalAlignment="Left" Margin="353,541,0,0" Grid.Row="1" VerticalAlignment="Top" Height="80" Width="347" Click="CmdDelivery_Click" BorderThickness="1"/>
